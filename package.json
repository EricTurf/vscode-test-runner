{
  "name": "test-runner",
  "displayName": "test-runner",
  "description": "Runs test of current file using `yarn` or `npm`",
  "version": "1.1.0",
  "publisher": "ericTurf",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.testFile"
  ],
  "main": "./extension/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.testFile",
        "title": "Test current file"
      }
    ],
    "keybindings": [
      {
        "key": "alt+cmd+t",
        "command": "extension.testFile"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Test-Runner configuration",
      "properties": {
        "test-runner": {
          "type": "object",
          "default": "{}",
          "description": "Configurations for test runner",
          "properties": {
            "packageManager": {
              "type": "string",
              "description": "Your prefered package manager"
            }
          }
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EricTurf/vscode-test-runner.git"
  },
  "icon": "assets/logo.png",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "prettier": "^1.14.3",
    "vscode": "^1.1.22"
  }
}
